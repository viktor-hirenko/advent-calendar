{
  "extends": ["stylelint-config-standard-scss"],
  "plugins": ["stylelint-order"],
  "rules": {
    "order/properties-order": [
      [
        {
          "groupName": "Positioning",
          "properties": [
            "position",
            "inset",
            "top",
            "right",
            "bottom",
            "left",
            "z-index",
            "display",
            "overflow",
            "overflow-x",
            "overflow-y"
          ]
        },
        {
          "groupName": "Box model",
          "properties": [
            "box-sizing",
            "width",
            "min-width",
            "max-width",
            "height",
            "min-height",
            "max-height",
            "margin",
            "margin-inline",
            "margin-block",
            "padding",
            "padding-inline",
            "padding-block"
          ]
        },
        {
          "groupName": "Flex/Grid",
          "properties": [
            "flex",
            "flex-grow",
            "flex-shrink",
            "flex-basis",
            "flex-direction",
            "flex-wrap",
            "justify-content",
            "align-items",
            "align-content",
            "gap",
            "row-gap",
            "column-gap",
            "grid",
            "grid-template",
            "grid-area"
          ]
        },
        {
          "groupName": "Borders & Visuals",
          "properties": [
            "border",
            "border-width",
            "border-style",
            "border-color",
            "border-radius",
            "outline",
            "outline-offset",
            "box-shadow"
          ]
        },
        {
          "groupName": "Backgrounds & Effects",
          "properties": [
            "background",
            "background-color",
            "background-image",
            "background-size",
            "background-position",
            "background-repeat",
            "filter",
            "backdrop-filter",
            "opacity",
            "mix-blend-mode"
          ]
        },
        {
          "groupName": "Typography",
          "properties": [
            "color",
            "font",
            "font-family",
            "font-size",
            "font-weight",
            "font-style",
            "font-variant",
            "line-height",
            "letter-spacing",
            "word-spacing",
            "text-align",
            "text-transform",
            "text-decoration",
            "text-overflow",
            "white-space",
            "overflow-wrap"
          ]
        },
        {
          "groupName": "Motion",
          "properties": ["transform", "transform-origin", "transition", "animation"]
        },
        {
          "groupName": "Interaction",
          "properties": [
            "cursor",
            "pointer-events",
            "user-select",
            "visibility",
            "appearance",
            "content"
          ]
        }
      ],
      { "unspecified": "bottomAlphabetical" }
    ],
    "order/order": [
      ["custom-properties", "dollar-variables", "declarations", "rules"],
      { "disableFix": false }
    ],
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "use",
          "forward",
          "include",
          "mixin",
          "function",
          "if",
          "each",
          "for",
          "while"
        ]
      }
    ],
    "property-no-deprecated": null,
    "keyframes-name-pattern": null,
    "scss/at-function-pattern": null,
    "scss/no-global-function-names": null,
    "container-name-pattern": null,
    "selector-class-pattern": "^[a-z][a-z0-9]*(-[a-z0-9]+)*(__[a-z0-9]+(-[a-z0-9]+)*)?(--[a-z0-9]+(-[a-z0-9]+)*)?$",
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": ["deep", "global", "slotted"]
      }
    ]
  },
  "ignoreFiles": ["dist/**/*", "node_modules/**/*", "src/design/generated/**/*"],
  "overrides": [{ "files": ["**/*.vue"], "customSyntax": "postcss-html" }]
}
