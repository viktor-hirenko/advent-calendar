{
  "name": "advent-calendar-vue",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "lint:styles": "stylelint \"src/**/*.{css,scss,vue}\" --fix",
    "lint:comments": "node scripts/check-comments.mjs",
    "lint:comments:strict": "COMMENT_POLICY=strict node scripts/check-comments.mjs",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run lint && npm run lint:comments",
    "validate-config": "node scripts/validate-config.mjs",
    "tokens:build": "tsx scripts/build-tokens.ts",
    "tokens:watch": "tsx scripts/build-tokens.ts && chokidar 'src/design/tokens.json' -c 'tsx scripts/build-tokens.ts'",
    "tokens:docs": "tsx scripts/export-docs.ts",
    "images:webp": "tsx scripts/convert-to-webp.ts",
    "predev": "npm run tokens:build",
    "prebuild": "npm run images:webp && npm run tokens:build"
  },
  "dependencies": {
    "dompurify": "^3.2.7",
    "vue": "^3.5.22",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.18.6",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.8.1",
    "chokidar": "^3.6.0",
    "eslint": "^9.33.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "eslint-plugin-vue": "~10.4.0",
    "glob": "^11.0.0",
    "husky": "^9.0.11",
    "jiti": "^2.5.1",
    "jsonc-parser": "^3.3.1",
    "lint-staged": "^15.2.7",
    "npm-run-all2": "^8.0.4",
    "postcss-html": "^1.8.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "sass": "^1.93.2",
    "sharp": "^0.34.4",
    "stylelint": "^16.25.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-order": "^7.0.0",
    "tsx": "^4.20.6",
    "typescript": "~5.9.0",
    "vite": "^7.1.7",
    "vite-plugin-vue-devtools": "^8.0.2",
    "vue-tsc": "^3.1.0"
  },
  "lint-staged": {
    "*.{ts,tsx,vue,js,mjs,scss}": [
      "prettier --write",
      "eslint --fix",
      "node scripts/check-comments.mjs"
    ]
  }
}
