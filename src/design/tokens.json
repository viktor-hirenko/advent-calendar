{
  "version": "1.0.0",
  "themes": {
    "alpa-dark": {
      "color": {
        "layer": {
          "1": "#000A12",
          "alt-1": "#262A34"
        },
        "text": {
          "primary": "#FFFFFF",
          "secondary": "#B6BDCC",
          "menu": {
            "default": "#B6BDCC",
            "active": "#FDD835"
          }
        },
        "button": {
          "primary": "#000A12",
          "secondary": "#B6BDCC",
          "tertiary": "#A153FF",
          "text": {
            "primary": "#000A12",
            "secondary": "#FFA000",
            "tertiary": "#FFFFFF"
          }
        },
        "notif": {
          "successfully": "#1BE176",
          "error": "#FF4444"
        },
        "tertiary": {
          "3": "#B6BDCC",
          "4": "#B6BDCC",
          "5": "#000A12"
        }
      },
      "gradient": {
        "secondary": "linear-gradient(90deg, #2E0F6C 0%, #2E0F6C 0.01%, #712DF5 100%)",
        "card": "linear-gradient(90deg, #2E0F6C 0%, #712DF5 50%, #2E0F6C 100%)",
        "button": {
          "primary": "linear-gradient(90deg, #FFA000 0%, #FFFF7B 100%)",
          "secondary": null
        }
      },
      "typography": {
        "families": {
          "rubik": "'Rubik', system-ui, -apple-system, Segoe UI, Roboto, sans-serif",
          "robotoSlab": "'Roboto Slab', ui-serif, Georgia, serif"
        },
        "heading": {
          "h1": { "family": "rubik", "weight": 700, "size": "32px", "lineHeight": 1.25 },
          "h3": { "family": "rubik", "weight": 700, "size": "20px", "lineHeight": 1.0 }
        },
        "body": {
          "regular": { "family": "rubik", "weight": 400, "size": "16px", "lineHeight": 1.5 },
          "bold": { "family": "rubik", "weight": 700, "size": "16px", "lineHeight": 1.25 }
        },
        "caption": {
          "largeBold": { "family": "rubik", "weight": 700, "size": "14px", "lineHeight": 1.7 },
          "small": { "family": "rubik", "weight": 400, "size": "12px", "lineHeight": 1.3 },
          "smallBold": { "family": "rubik", "weight": 700, "size": "12px", "lineHeight": 1.3 },
          "tinyBold": { "family": "rubik", "weight": 700, "size": "9px", "lineHeight": 1.8 }
        },
        "button": {
          "xs": { "family": "robotoSlab", "weight": 900, "size": "12px", "lineHeight": 1.35 },
          "small": { "family": "robotoSlab", "weight": 900, "size": "14px", "lineHeight": 1.7 }
        }
      }
    }
  },
  "meta": {
    "source": "Figma (Alpa [dark])",
    "runtime": {
      "categories": ["color", "gradient"],
      "allow": [],
      "deny": []
    },
    "notes": [
      "Tokens follow Layer-based structure from Figma DS.",
      "Use color.layer.* for background surfaces instead of color.background.*"
    ]
  }
}
